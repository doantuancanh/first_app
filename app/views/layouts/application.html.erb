<!DOCTYPE html>
<html>
  <head>
    <title>FirstApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to image_tag("logo.jpeg", :class => "logo img-responsive"), stories_path, {:style =>'padding: 0'} %></li>
            <li class = "link"><%= link_to("The loai", "#") %></li>
          </ul>
          <% if user_signed_in? %>
            <h3><%= link_to('Logout', destroy_user_session_path, method: :delete) %></h3> 
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to("Sign_in", new_user_session_path) %></li>
              <li><%= link_to("Sign_up", new_user_registration_path) %></li>
            </ul>
          <% end %>
          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Search</button>
          </form>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>

    <%= yield %>

  </body>
</html>

